<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
   android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ff808080"
    >
    <!--显示结果框-->
    <EditText
        android:id="@+id/input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:cursorVisible="false"
        android:gravity="right"
        android:focusable="flase"
        android:text="0"
        android:textSize="25sp"
        />
    <!--采用tableRow的格式进行布局设计-->
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/M"
            android:layout_height="wrap_content"
            android:layout_width="53sp"
            android:text="MEM"
            android:textSize="15sp"/>
        <TextView
            android:id="@+id/mem"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:textSize="15sp"
            android:text="0"
            />
    </TableRow>
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <!--显示当前是角度还是弧度，默认是角度-->
        <TextView
            android:id="@+id/_drg"
            android:layout_width="53sp"
            android:layout_height="wrap_content"
            android:text="DEG"
            android:textSize="15sp"/>
        <!--清除储存结果-->
        <Button
            android:id="@+id/mc"
            android:text="MC"
            android:textSize="15sp"
            android:layout_height="wrap_content"
            android:layout_width="106sp"/>
        <!--清除窗口的所有内容-->
        <Button
            android:id="@+id/c"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="C"
            />
    </TableRow>
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <!--在角度和弧度之间转换-->
        <Button
            android:id="@+id/drg"
            android:layout_width="53sp"
            android:layout_height="wrap_content"
            android:text="DRG"/>
        <!--正弦计算-->
        <Button
            android:id="@+id/sin"
            android:layout_width="53sp"
            android:layout_height="wrap_content"
            android:text="SIN"/>
        <!--余弦计算-->
        <Button
            android:id="@+id/cos"
            android:layout_width="53sp"
            android:layout_height="wrap_content"
            android:text="COS"/>
        <!--正切计算-->
        <Button
            android:id="@+id/tan"
            android:layout_height="wrap_content"
            android:layout_width="53sp"
            android:text="TAN"/>
        <!--阶乘计算-->
        <Button
            android:id="@+id/factorial"
            android:layout_height="wrap_content"
            android:layout_width="53sp"
            android:text="n!"/>
        <!--退格键-->
        <Button
            android:id="@+id/bksp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bksp"/>
    </TableRow>
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/seven"
            android:text="7"
            android:layout_width="53sp"
            android:layout_height="wrap_content"/>.
        <Button
            android:id="@+id/eright"
            android:text="8"
            android:layout_width="53sp"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/nine"
            android:text="9"
            android:layout_width="53sp"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/divide"
            android:text="/"
            android:layout_width="53sp"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/left"
            android:text="("
            android:layout_width="53sp"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/right"
            android:text=")"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </TableRow>
    <TableRow
        android:layout_height="wrap_content"
        android:layout_width="match_parent">
        <Button
            android:id="@+id/four"
            android:text="4"
            android:layout_height="wrap_content"
            android:layout_width="53sp"/>
        <Button
            android:id="@+id/five"
            android:text="5"
            android:layout_height="wrap_content"
            android:layout_width="53sp"
            />
        <Button
            android:id="@+id/six"
            android:text="6"
            android:layout_height="wrap_content"
            android:layout_width="53sp"/>
        <Button
            android:id="@+id/mul"
            android:text="*"
            android:layout_height="wrap_content"
            android:layout_width="53sp"/>
        <Button
            android:id="@+id/sqrt"
            android:text="√"
            android:layout_height="wrap_content"
            android:layout_width="53sp"/>
        <Button
            android:id="@+id/square"
            android:text="^"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"/>
    </TableRow>
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/one"
            android:text="1"
            android:layout_height="wrap_content"
            android:layout_width="53sp"/>
        <Button
            android:id="@+id/two"
            android:text="2"
            android:layout_height="wrap_content"
            android:layout_width="53sp"/>
        <Button
            android:id="@+id/three"
            android:text="3"
            android:layout_height="wrap_content"
            android:layout_width="53sp"/>
        <Button
            android:id="@+id/sub"
            android:text="-"
            android:layout_height="wrap_content"
            android:layout_width="53sp"/>
        <Button
            android:id="@+id/log"
            android:text="log"
            android:layout_height="wrap_content"
            android:layout_width="53sp"/>
        <Button
            android:id="@+id/ln"
            android:text="ln"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"/>
    </TableRow>
    <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="57sp">
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/zero"
                android:text="0"
                android:layout_height="wrap_content"
                android:layout_width="53sp"/>
            <Button
                android:id="@+id/dot"
                android:text="."
                android:layout_height="wrap_content"
                android:layout_width="53sp"/>
            <Button
                android:id="@+id/equal"
                android:text="="
                android:layout_height="wrap_content"
                android:layout_width="53sp"/>
            <Button
                android:id="@+id/add"
                android:text="+"
                android:layout_height="wrap_content"
                android:layout_width="53sp"/>

            <Button
                android:id="@+id/exit"
                android:text="exit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
          <Button
              android:text="(^ˇ^)"
              android:layout_gravity="center"
              android:textSize="15sp"/>
        </TableRow>
    </TableLayout>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/T"
                android:layout_width="45sp"
                android:layout_height="wrap_content"
                android:text="提示"
                android:textSize="20sp"/>
            <TextView
                android:id="@+id/tip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="欢迎使用!"
                android:textSize="20sp"/>
        </TableRow>
</LinearLayout>
